<%= render 'users/header' %>
<% if @projects.count == 0 %>
  <h2 class="center">Getting started with a new project is one click away.</h2></br>
	<%= link_to "Let's get started with a project", new_project_path, { class: "btn btn-large btn-block btn-info" } %>
<% else %>
	<% @projects.each do |project| %>
		<div class="project-card-in-the-dashboard">
		  <h2><%= link_to project.title, project_path(project) %><h5><%= project.objective %></h5>
		  	<%= link_to "Completed?", project_path(project), { class: "btn btn-small btn-success buttons-for-user-dashboard pull-right", confirm: 'Another one bites the dust?', method: :delete } %>
		  </h2>
		  <p><strong>Due Date: <%= project.due_date.strftime("%Y %d %m") %></strong></p>
		</div>
	<% end %>
<% end %>



