<div class="center">
	<div class="page-header">
		<h4><%= @user.first_name %> <%= @user.last_name %><small> Honda of Canada</small></h4>
	</div>
	<div class="user-left-photo">
		<% if @user.avatar.url == nil %>
				<%= form_for @user, html: { :multipart => true } do |f| %>
		    <%= f.file_field :avatar, { class: "btn" } %>
		  	<%= f.submit "Upload your image", { class: "btn" } %>
	  	<% end %>
		<% else %>
		  <%= image_tag @user.avatar.url %>
		<% end %>
	</div></br>
	<div class="button">
	  <%= link_to "New Project", new_user_project_path(@user), { class: "btn btn-block" } %>
	</div>
	<div class="button">
		<%= link_to 'Invite Team Members', new_invitation_path, { class: "btn btn-block" } %> 
	</div>
	<div class="button">
		<%= link_to 'Logout', :logout, { class: "btn btn-warning btn-block" } %>  
	</div>	
</div>


