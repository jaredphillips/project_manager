<div class="center hero-unit">  
  <h1>Sign Up</h1></br>
  <%= form_for @user do |f| %>
    <%= render 'layouts/error_messages' %>

    <%= hidden_field_tag :invitation_token, @token %>
    
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, { class: "input-xlarge" }  %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, { class: "input-xlarge" } %>
    </div></br>
    
    <div class="action">
        <%= f.file_field :avatar, { class: "btn" } %>
    </div></br>
    
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, { class: "input-xlarge" } %>
    </div>


    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, { class: "input-xlarge" } %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, { class: "input-xlarge" } %>
    </div>

    <div class="actions">
      <%= f.submit "Get Started", { class: "btn btn-large btn-success" } %>
    </div>
    
  <% end %>
</div>
