  <h1>Welcome back</h1></br>
  <%= form_for(@user, url: sessions_path) do |f| %>
    <%= render 'layouts/error_messages' %> 
    <%= render 'layouts/flash' %>


    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>

  <% end %>
  
  <p>You should bookmark this page for faster access in the future</p>


