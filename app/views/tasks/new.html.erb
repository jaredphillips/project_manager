<div class="hero-unit">
	<h2>Create a task for <%= @project.title %></h2>
	<%= form_for new_user_project_task_path do |f| %>
	  
	  <div class="field"> 
			<%= f.label :instructions, "Instructions" %>
			<%= f.text_area :instructions %></br>
		</div>

	  <div class="date-field">			
	  	<%= f.label :due_date, "Due date for this... " %>
			<%= f.date_field :due_date %>
	  </div>

	  <div class="action"> 
			<%= f.submit "Create Task!", class: "btn btn-large btn-success" %>
		</div>
	<% end %>
</div>
