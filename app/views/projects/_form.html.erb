<%= form_for [@user, @project] do |f| %>
  <div class="field"> 
	  <%= f.label :title, "Title: " %>
	  <%= f.text_field :title %>
	</div>
  <div class="field">	  
  	<%= f.label :objective, "Objective: " %>
	  <%= f.text_field :objective %>
	</div>
  <div class="date-field">			
  	<%= f.label :due_date, "Due Date: " %>
		<%= f.date_field :due_date %>
  </div>

	<div class="action">
		<%= f.submit "Get this project started" %>
	</div>
	
	<div class="action">
		<%= link_to "Back to your page", '#' %></p>
	</div>
<% end %>
