<% if @invitation.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@invitation.errors.count, "error") %>.
    </div>
    <% @invitation.errors.full_messages.each do |msg| %>
      <p>* <%= msg %></p>
    <% end %>
  </div>
<% end %>