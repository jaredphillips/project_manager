<div class="right-side-container">
	<div class="center">
		<div class="page-header">
			<h4>Your Team <small> Add & Remove members below</small></h4>
		</div>
		<h1>New Member</h1>
			<%= form_for @invited_guest do |f| %>
		  <div class="field">	  
		  	<%= f.label :first_name, "First Name" %>
			  <%= f.text_field :first_name %>
			</div></br>

			<div class="field">	  
		  	<%= f.label :last_name, "Last Name" %>
			  <%= f.text_field :last_name %>
			</div></br>

			<div class="field">	  
		  	<%= f.label :email, "Email" %>
			  <%= f.text_field :email %>
			</div></br>
			
			<div class="action">
				<%= f.submit "Send Invite" %>
			</div>
		<% end %>
	</div>
</div>
